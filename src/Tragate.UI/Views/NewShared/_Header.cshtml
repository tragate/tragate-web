<div class="u-full-width">
    <div class="container">
        <div class="three columns logo">
            <a asp-action="index" asp-controller="home" rel="Home">
                <img src="/Content/images/logo.png">
            </a>
            <div class="hamburger">
                <ul class="MainMenu">
                    @Html.Partial("~/Views/NewShared/_MainMenu.cshtml")
                    <div class="subBg"></div>
                </ul>
            </div>
        </div>
        <div class="seven columns">
            @{
                var cKey = Context.Request.Query["key"].ToString();
                var cSearchType = ViewData["SearchType"] == null ? "products" : ViewData["SearchType"];
            }
            <form id="Search" class="twelve columns" method="get" asp-action="@cSearchType" asp-controller="search" asp-route-category="all">
                <div class="form-group">
                    <input type="text" id="SearchInput" value="@cKey" name="key" placeholder="search products or companies" autocomplete="off" />
                    <button type="submit" class="btn torquoise">Search</button>
                </div>
            </form>
            <div class="btn border close" onclick="$(this).parent('.seven').removeClass('active')">X</div>
        </div>
        <div class="two columns user">
            @await Component.InvokeAsync("LoginStatus", new { view = "New" })
        </div>
    </div>
</div>
