@model Tragate.UI.Models.HomeViewModel

<ul class="header-compare nav navbar-nav">
    <li class="nav-item">
        <a asp-area="" asp-controller="User" asp-action="Index" class="nav-link">
            <i class="tm tm-login-register"></i>
            <span class="value">@Model.UserName</span>
        </a>
        <ul>
            <li class="cat-item">
                <a asp-action="index" asp-controller="user">
                    <span class="child-indicator">
                        <i class="fa fa-th-large"></i>
                    </span>Home
                </a>
            </li>
            <li class="cat-item">
                <a asp-action="company" asp-controller="user">
                    <span class="child-indicator">
                        <i class="fa fa-building-o"></i>
                    </span>Company
                </a>
            </li>
            <li class="cat-item">
                <a asp-action="settings" asp-controller="user">
                    <span class="child-indicator">
                        <i class="fa fa-cogs"></i>
                    </span>Settings
                </a>
            </li>
            <li class="cat-item">
                <a asp-action="logout" asp-controller="account">
                    <span class="child-indicator">
                        <i class="fa fa-power-off"></i>
                    </span>Log Out
                </a>
            </li>
        </ul>
    </li>
    <li class="nav-item">
        <a asp-action="buyer-quotes" asp-controller="user" class="nav-link">
            <i class="fa fa-cubes fa-2x"></i>
            @Html.Raw(Model.WaitingBuyerCount > 0 ? "<span>"+Model.WaitingBuyerCount+"</span>" : "")
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="seller-quotes" asp-controller="user" class="nav-link">
            <i class="fa fa-money fa-2x"></i>
            @Html.Raw(Model.WaitingSellerCount > 0 ? "<span>" + Model.WaitingSellerCount + "</span>" : "")
        </a>
    </li>
</ul>