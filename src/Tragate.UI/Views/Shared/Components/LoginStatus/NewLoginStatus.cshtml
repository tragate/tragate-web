@model Tragate.UI.Models.HomeViewModel
@if (!User.Identity.IsAuthenticated)
{
    <a class="btn border six columns" asp-area="" asp-controller="Account" asp-action="Login">
        <i class="far fa-user"></i>
        <span>Login</span>
    </a>
    <a class="btn border six columns" asp-area="" asp-controller="Account" asp-action="SignUp">
        <i class="far fa-check-circle"></i>
        <span>Join</span>
    </a>
}
else
{
    <div class="btn six columns userMenu">
        <a class="" asp-action="index" asp-controller="user">
            <i class="fas fa-user"></i>
            <span>@Model.UserName</span>
        </a>
        <ul>
            <li>
                <a asp-action="index" asp-controller="user">
                    <i class="fa fa-th-large"></i>
                    Home
                </a>
            </li>
            <li>
                <a asp-action="company" asp-controller="user">
                    <i class="far fa-building"></i>
                    Company
                </a>
            </li>
            <li>
                <a asp-action="settings" asp-controller="user">
                    <i class="fa fa-cogs"></i>
                    Settings
                </a>
            </li>
            <li>
                <a asp-action="logout" asp-controller="account">
                    <i class="fa fa-power-off"></i>
                    Log Out
                </a>
            </li>
        </ul>
    </div>
    <div class="six columns notify">
        <div class="six columns">
            <a asp-action="buyer-quotes" asp-controller="user">
                <i class="fas fa-cubes"></i>
                @Html.Raw(Model.WaitingBuyerCount > 0 ? "<span>" + Model.WaitingBuyerCount + "</span>" : "")
            </a>
        </div>
        <div class="six columns">
            <a asp-action="seller-quotes" asp-controller="user">
                <i class="fas fa-money-bill-alt"></i>
                @Html.Raw(Model.WaitingSellerCount > 0 ? "<span>" + Model.WaitingSellerCount + "</span>" : "")
            </a>
        </div>
    </div>
}
<div class="btn showSearch" onclick="$('#Search').parent('.seven').addClass('active'); $('#SearchInput').focus();">
    <i class="fas fa-search"></i>
</div>
