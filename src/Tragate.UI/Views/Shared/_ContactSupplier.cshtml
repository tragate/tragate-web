<div class="modal fade" id="ContactSupplierModal" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="container-title">Contact Supplier</div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                    </div>
                </div>
                <div class="step s1">
                    <div id="CompanyTitle"></div>
                    <div class="img_wrapper"><img src="https://cdn.tragate.com/items/product.jpg" /></div>
                    <div id="ProductTitle"></div>
                    <form class="quoteForm">
                        <div class="form-group">
                            <label>Your Message</label>
                            <textarea name="UserMessage" id="UserMessage" cols="5" minlength="20" required></textarea>
                        </div>
                        <div class="form-group">
                            <div class="mcheckbox">
                                <input type="checkbox" name="UserTermCheckBox" id="UserTermCheckBox" value="false" checked required>
                                <label for="UserTermCheckBox"></label>
                            </div>
                            <label for="UserTermCheckBox">
                                I accept TraGate
                                <span class="ShowTrageteModal" data-url="/content/user-terms/json" data-title="User Terms" style="text-decoration:underline;">
                                    User Terms
                                </span>
                                and
                                <span class="ShowTrageteModal" data-url="/content/privacy-policy/json" data-title="User Terms" style="text-decoration:underline;">
                                    Privacy Policy
                                </span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn torquoise pull-right">Send </button>
                        </div>
                    </form>
                </div>
                <div class="step s2">
                    <div class="tabs">
                        <div class="tab active" data-to="#TLogin">Login</div>
                        <div class="tab" data-to="#TRegister">Quick Accsess</div>
                    </div>
                    <div class="tab-content">
                        <div class="content active" id="TLogin">
                            <form class="ajax tragate" method="POST" action="/Account/Login" data-event="Login" validate>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input name="email" type="email" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input name="password" type="password" placeholder="Password" minlength="6" required>
                                </div>
                                <button type="button" class="btn torquoise submit pull-right">Login</button>
                            </form>
                        </div>
                        <div class="content" id="TRegister">
                            <form class="quickAccess" validate>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input name="email" type="email" placeholder="Email" required>
                                </div>
                                @await Component.InvokeAsync("Location", new { countryId = 0, stateId = 0 })
                                <button type="button" class="btn btn-primary block full-width m-b">Next</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="step s3">
                    <div class="thanks" id="Thanks"></div>
                    <svg version="1.1" id="tick" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 37 37" style="enable-background:new 0 0 37 37;" xml:space="preserve">
                    <polyline class="tick path" points="11.6,20 15.9,24.2 26.4,13.8" />
                    </svg>
                    <br />    <br />
                    <div class="text-center">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Close</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>