@model Tragate.UI.Models.User.ExternalSignUpViewModel

@{ ViewData["Title"] = "Register and Join Free"; Layout = "~/Views/Shared/_AccountLayout.cshtml"; }
@section Styles{
    <link href="~/assets/css/custom-css/wizard/form-elements.css" rel="stylesheet" />
    <link href="~/assets/css/custom-css/wizard/style.css" rel="stylesheet" />
}
<div class="row" id="container">
    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-5 col-lg-offset-2 form-box aligncenter">
        <h3>Sign Up and Join Free Now!</h3>
        <p>Complete your sign up process to get instant access</p>
        <form class="col-lg-8 col-md-8 aligncenter ajax tragate" method="post" action="/account/external-sign-up">
            <vcsummary></vcsummary>
            <div id="result"></div>


            <div class="form-group">
                <label class="black-label"><i class="fa fa-user"></i> Your Full Name</label>
                <input class="form-control" type="text" asp-for="FullName" placeholder="Your Full Name" readonly>
            </div>

            <div class="form-group">
                <label class="black-label"><i class="fa fa-envelope"></i> Email</label>
                <input class="form-control" type="email" asp-for="Email" value="@Model.Email" readonly>
            </div>

            @await Component.InvokeAsync("Location", new { countryId = @Model.CountryId, stateId = @Model.StateId })



            <div class="form-group">
                <div class="mcheckbox">
                    <input type="checkbox" name="UserTermCheckBox" id="UserTermCheckBox" value="false" checked required>
                    <label for="UserTermCheckBox"></label>
                </div>
                <label for="UserTermCheckBox">
                    I accept TraGate
                    <span class="ShowTrageteModal" data-url="/content/user-terms/json" data-title="User Terms" style="text-decoration:underline;">
                        User Terms
                    </span>
                    and
                    <span class="ShowTrageteModal" data-url="/content/privacy-policy/json" data-title="User Terms" style="text-decoration:underline;">
                        Privacy Policy
                    </span>
                </label>
            </div>
            <div class="form-group">
                <button class="button is-primary full-width" type="button">Sign Up</button>
            </div>
            <span href="#">
                Already have an account ?
            </span>
            <a href="/Account/login" class="right">
                Go to Login
            </a>
        </form>
    </div>
</div>