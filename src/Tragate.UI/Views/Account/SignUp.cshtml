@model Tragate.UI.Models.User.UserRegisterViewModel
@{ 
    ViewData["Title"] = "Register and Join Free";
    ViewData["Class"] = "SingUp";
    Layout = "~/Views/NewShared/AccountLayout.cshtml";
}

<div class="u-full-width ForgotPage">
    <div class="container">
        <div class="twelve columns">
            <h1>Sign Up and Join Free Now!</h1>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                <div class="step s1 active">
                    <div class="icon"><i class="fa fa-user"></i></div>
                    <div class="text">Personal Info</div>
                </div>
                <div class="step s2">
                    <div class="icon"><i class="fa fa-check-circle"></i></div>
                    <div class="text">Verification</div>
                </div>
                <div class="step s3">
                    <div class="icon"><i class="fa fa-building"></i></div>
                    <div class="text">Company Info</div>
                </div>
            </div>
            <div class="row">
                <div class="twelve columns social-btns">
                    <div class="row">
                        <div class="six columns"><div class="btn social-login facebook" onclick="$.FacebookLogin.Login();" data-toggle="tooltip" title="Login With Facebook"><i class="fab fa-facebook-f"></i> Login With Facebook</div></div>
                        <div class="six columns"><div class="btn social-login google" data-toggle="tooltip" title="Login With Google"><img src="~/assets/images/google.png" />Login With Google</div></div>
                    </div>
                </div>
            </div>
            <form class="ajax tragate inForm twelve columns" method="post" action="/Account/Signup" data-event="SignUp" validate>
                <div class="form-group">
                    <label><i class="fa fa-user"></i> Your Full Name</label>
                    <input name="FullName" type="text" placeholder="Your Full Name" required />
                </div>
                @await Component.InvokeAsync("Location", new { countryId = @Model.CountryId, stateId = @Model.StateId })

                <div class="form-group">
                    <label><i class="fa fa-envelope"></i> Email</label>
                    <input name="Email" id="txtEmail" type="email" placeholder="Email" required />
                </div>

                <div class="form-group">
                    <label><i class="fa fa-lock"></i> Password</label>
                    <input name="Password" id="Password" type="password" placeholder="Password" minlength="6" required>
                </div>

                <div class="form-group">
                    <label><i class="fa fa-lock"></i> Confirm Password</label>
                    <input name="PasswordMatch" type="password" placeholder="Confirm password" minlength="6" data-rule-equalTo="#Password" required>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="mcheckbox">
                            <input type="checkbox" name="UserTermCheckBox" id="UserTermCheckBox0" value="false" checked required>
                            <label for="UserTermCheckBox0"></label>
                        </div>
                        <label>
                            I accept TraGate
                            <span class="ShowTrageteModal" data-url="/content/user-terms/json" data-title="User Terms" style="text-decoration:underline;">
                                User Terms
                            </span>
                            and
                            <span class="ShowTrageteModal" data-url="/content/privacy-policy/json" data-title="User Terms" style="text-decoration:underline;">
                                Privacy Policy
                            </span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="btn torquoise submit">Sign Up</div>
                </div>
                <span>Already have an account ?</span> <a asp-controller="Account" asp-action="Login" class="underline link">Go to Login</a>
            </form>

        </div>
    </div>
</div>